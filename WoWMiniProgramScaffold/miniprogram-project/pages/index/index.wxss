/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
} 

.userinfo,
.button-groups {
  display: flex;
  align-items: center;
}

.userinfo {
  flex-direction: column;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  display: block;
  text-align: center;
  font-size: 32rpx;
}

.userinfo-score {
  color: #000;
  text-align: center;
  margin: 20rpx 15rpx;
  height: 50px;
  font-size: 40rpx;
  font-weight: 600;
}

.usermotto {
  margin-top: 30px;
  font-size: 28rpx;
}

.userdesc {
  margin: 30px 15px 20px 15px;
  padding: 20rpx;
  background-color: #efefef;
  border-radius: 10px;
  border-width: 1px;
  border-color: #eee;
}

.user-desc {
  color: #000;
  text-align: left;
  font-size: 28rpx;
  font-weight: 200;
}

.button-groups {
  justify-content: center;
  width: 70vw
}

.button-groups button {
  margin: 0 10rpx;
}

.userhot {
  margin: 30px 15px 0px 15px;
  display: flex;
  flex-direction: row;
}

.user-hot {
  margin: auto;
  color: red;
  text-align: left;
  font-size: 50rpx;
  font-weight: 200;
}